<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="playerLeftImage" class="org.newdawn.slick.Image">
        <constructor-arg value="images/supermanLeft.png"/>
    </bean>

    <bean id="peonLeftImage" class="org.newdawn.slick.Image">
        <constructor-arg value="images/peonLeft.png"/>
    </bean>

    <bean id="blockSheet" class="org.newdawn.slick.XMLPackedSheet">
        <constructor-arg value="spritesheet/blockSheet"/>
        <constructor-arg value="spritesheet/blockSheet.xml"/>
    </bean>

    <bean id="zombieImage" class="org.newdawn.slick.Image">
        <constructor-arg value="images/zombie.gif"/>
    </bean>

    <bean id="meteorImage" class="org.newdawn.slick.Image">
        <constructor-arg value="images/meteor.gif"/>
    </bean>

    <bean id="zombieGifAnimation" class="kniemkiewicz.jqblocks.util.slick.GifAnimation">
        <constructor-arg value="images/zombie.gif"/>
    </bean>


    <bean id="zombieDeathSheet" class="org.newdawn.slick.SpriteSheet">
        <constructor-arg value="spritesheet/zombie_death.png"/>
        <constructor-arg value="60"/>
        <constructor-arg value="60"/>
    </bean>
</beans>
