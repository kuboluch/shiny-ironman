<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean id="playerLeftImage" class="kniemkiewicz.jqblocks.util.FlippingImage">
        <constructor-arg value="images/supermanLeft.png"/>
    </bean>

    <bean id="peonLeftImage" class="kniemkiewicz.jqblocks.util.FlippingImage">
        <constructor-arg value="images/peonLeft.png"/>
    </bean>

    <bean id="blockSheet" class="org.newdawn.slick.XMLPackedSheet">
        <constructor-arg value="spritesheet/blockSheet"/>
        <constructor-arg value="spritesheet/blockSheet.xml"/>
    </bean>
</beans>
